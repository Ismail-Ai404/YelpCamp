<!-- @format -->
<% layout("layouts/boilerplate") %>

<div class="container mb-2">
     <div
          class="card shadow-lg border-0 rounded-4 p-4 mx-auto"
          style="max-width: 450px"
     >
          <h1 class="mb-4 text-center fw-bold">
               <i class="bi bi-box-arrow-in-right text-primary me-2"></i>
               Login
          </h1>

          <form
               action="/login"
               method="POST"
               class="needs-validation"
               novalidate
          >
               <!-- Username -->
               <div class="mb-3">
                    <label for="username" class="form-label fw-semibold">
                         <i class="bi bi-person-circle me-1 text-info"></i>
                         Username
                    </label>
                    <input
                         type="text"
                         name="username"
                         id="username"
                         class="form-control rounded-3 shadow-sm"
                         placeholder="Enter your username"
                         value="<%= typeof username !== 'undefined' ? username : '' %>"
                         required
                    />
                    <div class="invalid-feedback">
                         Please enter your username.
                    </div>
               </div>

               <!-- Password -->
               <div class="mb-3">
                    <label for="password" class="form-label fw-semibold">
                         <i class="bi bi-lock-fill me-1 text-warning"></i>
                         Password
                    </label>
                    <input
                         type="password"
                         name="password"
                         id="password"
                         class="form-control rounded-3 shadow-sm"
                         placeholder="Enter your password"
                         required
                    />
                    <div class="invalid-feedback">
                         Please enter your password.
                    </div>
               </div>

               <!-- Submit -->
               <div
                    class="d-flex justify-content-between align-items-center mt-4"
               >
                    <button
                         type="submit"
                         class="btn btn-primary px-4 shadow-sm rounded-3"
                    >
                         <i class="bi bi-box-arrow-in-right me-1"></i> Login
                    </button>
                    <a
                         href="/register"
                         class="btn btn-outline-secondary px-4 shadow-sm rounded-3"
                    >
                         <i class="bi bi-person-plus-fill me-1"></i> Register
                    </a>
               </div>
          </form>
     </div>
</div>
